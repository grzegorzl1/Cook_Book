
<%- model_class = Category -%>
<div class="page-header">
  <h1>Kategoria</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nazwa) %>:</strong></dt>
  <dd><%= @category.name %></dd>
</dl>

<table class="table table-striped">

   <thead>
     <tr>
      <th><%= model_class.human_attribute_name(:nazwa) %></th>
      <th><%= model_class.human_attribute_name(:opis) %></th>
      <th><%= model_class.human_attribute_name(:trudność) %></th>
      <th><%= model_class.human_attribute_name(:polubienia) %></th>
      <!-- <th><%= model_class.human_attribute_name(:kategoria) %></th> -->
      <!-- <th><%= model_class.human_attribute_name(:utworzono) %></th> -->
      </th>
    </tr>
  </thead>

  <tbody>
    <% @category.recipes.each do |recipe| %>
      <tr>
        <td><%= link_to recipe.name, recipe_path(recipe) %></td>
        <td><%= recipe.description %></td>
        <td><%= recipe.difficulty_level %></td>
        <td><%= recipe.rank %></td>
        <!-- <td><%= recipe.category_id %></td> -->
        <!-- <td><%=l recipe.created_at %></td> -->
        <td>

      </td>
     </tr>
    <% end %>
   </tbody>
 </table>

<p>
  <%= link_to "Nowy przepis", new_recipe_path,
            :class => 'btn btn-primary' %> |
  <%= link_to  "Wróć",
               categories_path, :class => 'btn btn-default'  %>
  <%= link_to "Edytuj",
               edit_category_path(@category), :class => 'btn btn-default' %>
  <%= link_to "Usuń",
              category_path(@category),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</p>
