<%- model_class = Component -%>
<div class="page-header">
  <h1>Nazwa</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nazwa) %>:</strong></dt>
  <dd><%= @component.name %></dd>
</dl>

<%= link_to  "Wróć",
              components_path, :class => 'btn btn-default'  %>
<%= link_to  "Edytuj",
              edit_component_path(@component), :class => 'btn btn-default' %>
<%= link_to  "Usuń",
              component_path(@component),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
